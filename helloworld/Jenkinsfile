pipeline {
    agent any

		parameters {
			string name: 'Git repository', trim: true
			string branch: 'Git branch', trim: true
		}

    stages {
        stage('init') {
            steps {
								sh 'ls'
								// git branch: 'pipeline', url: 'https://github.com/jackproudfoot-end/terraform-jenkins-test.git'
            }
        }
				stage('terraform') {
					steps {
						dir('helloworld') {
							sh 'terraform init'
							sh 'terraform plan'
						}
					}
				}
    }

		post {
			cleanup {
				cleanWs()
			}
		}
}
