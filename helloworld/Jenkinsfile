pipeline {
    agent any
    stages {
        stage('init') {
            steps {
								git branch: 'pipeline', url: 'https://github.com/jackproudfoot-end/terraform-jenkins-test.git'
            }
        }
				stage('terraform') {
					steps {
						sh 'ls'
						dir('terraform-jenkins-test') {
							sh 'ls'
							dir('helloworld') {
								sh 'git pull'
								sh 'ls'
								sh 'terraform init'
								sh 'ls'
								sh 'terraform plan'
								sh 'ls'
							}
						}
					}
				}
    }
}
