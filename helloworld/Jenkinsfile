pipeline {
    agent any

		parameters {
			string(GIT_REPO: 'Git repository', trim: true)
			string(GIT_BRANCH: 'Git branch', trim: true)
		}

    stages {
        stage('init') {
            steps {
								sh 'ls'
								git branch: "${params.GIT_BRANCH}", url: "${params.GIT_REPO}"
            }
        }
				stage('terraform') {
					steps {
						dir('helloworld') {
							sh 'terraform init'
							sh 'terraform plan'
						}
					}
				}
    }

		post {
			cleanup {
				cleanWs()
			}
		}
}
